    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@ViewBag.Title : @Html.ActionLink("Cloud Shop", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">                        
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Products", "Index", "Home")</li>
                            <li>@Html.ActionLink("Checkout", "Checkout", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
       
        <footer>
            <div class="content-wrapper">
                
                <div class="float-left">
                    <h4>Now: @DateTime.Now.ToShortDateString()-@DateTime.Now.ToLongTimeString() Product loading time: @ViewBag.RepoTime</h4>
                    <p>&copy; @DateTime.Now.Year - @ViewBag.ConnectionString</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
